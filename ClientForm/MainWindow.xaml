<src:BaseForm x:Class="ClientForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:src="clr-namespace:BaseFormLib;assembly=BaseFormLib"
        xmlns:local="clr-namespace:ClientForm"
        mc:Ignorable="d"
        Title="Dotchat Client" Height="450" Width="800" Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="lstChat" Grid.Row="0" Grid.Column="0" Margin="10" Background="White" />

        <Button x:Name="btnDisconnect" Content="Disconnect" Click="BtnDisconnect_Click" Margin="5" Grid.Row="1" Grid.Column="1" Visibility="Collapsed"/>

        <GroupBox Header="Connect to Server:" x:Name="grpConnect" Grid.Row="0" Grid.Column="1" Margin="10" FontWeight="Bold">
            <StackPanel>
                <Label Content="Chatserver IP:"/>
                <TextBox x:Name="txtServerIP" Text="127.0.0.1" Margin="5" KeyDown="TxtServerIP_KeyDown"/>

                <Label Content="Chatserver Port:"/>
                <TextBox x:Name="txtServerPort" Text="9000" Margin="5" KeyDown="TxtServerIP_KeyDown"/>

                <Label Content="Username:"/>
                <TextBox x:Name="txtUsername" Text="username" Margin="5"/>
                <TextBlock x:Name="txtUsernameError" Text="Username must be between 1 and 35 characters." Foreground="Red" Visibility="Collapsed" Margin="5"/>

                <Button x:Name="btnConnect" Content="Connect" Click="BtnConnect_Click" Margin="5"/>
            </StackPanel>
        </GroupBox>

        <StackPanel x:Name="stkMessage" Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="10" Visibility="Collapsed">
            <TextBox x:Name="txtMessage" Width="472" Height="25"/>
            <Button x:Name="btnSend" Content="Send" Click="BtnSend_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</src:BaseForm>
